          "orientation": "horizontal",
          "size": [ "100%c", 10 ],
          "anchor_from": "bottom_middle",
          "anchor_to": "bottom_middle",
          "$left_text|default": "",
          "$right_text|default": "",
          "$loading_text|default": "",
