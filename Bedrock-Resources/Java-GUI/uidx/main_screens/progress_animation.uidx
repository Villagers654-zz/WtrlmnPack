    "type": "stack_panel",
    "orientation": "horizontal",
    "size": [ "100%cm", 10 ],
    "$number_text|default": "",
    "controls": [
      {
        "number_label": {
          "type": "label",
          "text": "$number_text",
          "shadow": true,
          "size": [ "default", 10 ]
        }
      },
      {
        "percentage_label": {
